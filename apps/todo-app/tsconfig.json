{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@todo-starter/ui": ["../../packages/ui/src"],
      "@todo-starter/ui/*": ["../../packages/ui/src/*"],
      "@todo-starter/utils": ["../../packages/utils/src"],
      "@todo-starter/utils/*": ["../../packages/utils/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
